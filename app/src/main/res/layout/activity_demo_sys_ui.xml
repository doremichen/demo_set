<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".systemUI.DemoSysUIAct">

    <TextView
        android:id="@+id/showInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_info"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/ActDimSysUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ActExit"
        android:text="@string/action_dim_system_ui"
        android:onClick="onDimSysUI"/>

    <Button
        android:id="@+id/ActExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_exit"
        android:onClick="onExit"/>

    <Button
        android:id="@+id/ActHideSysUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ActExit"
        android:text="@string/action_hide_system_ui"
        android:onClick="onHideSysUI"/>
</RelativeLayout>