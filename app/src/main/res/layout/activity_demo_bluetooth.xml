<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btdemo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/label_hello_bt" />

    <Switch
        android:id="@+id/switch_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_bt_on_off" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_scan_list"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/scan_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="219dp">

        <ListView
            android:id="@+id/scan_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_no_data"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_paired_list"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/paired_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="219dp">

        <ListView
            android:id="@+id/paired_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_no_data"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
