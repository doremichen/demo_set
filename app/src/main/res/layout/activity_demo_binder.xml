<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biner.DemoBinderAct">


    <TextView
        android:id="@+id/tv_input_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="47dp"
        android:text="@string/label_input_a"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_input_a"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_input_a"
        android:layout_toEndOf="@+id/tv_input_a"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_input_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_input_a"
        android:layout_toEndOf="@+id/et_input_a"
        android:text="@string/label_input_b"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_input_b"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_input_b"
        android:layout_toEndOf="@+id/tv_input_b"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_output_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_input_a"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:text="@string/label_output_c"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_execute_binder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_output_c"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="290dp"
        android:onClick="onExecuteBinderCall"
        android:text="@string/action_binder_call" />
</RelativeLayout>