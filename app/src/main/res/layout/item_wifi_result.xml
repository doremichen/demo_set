<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/item_label_SSID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/label_wifi_result_item_ssid"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/item_label_Level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_label_BSSID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/label_wifi_result_item_bssid"
        app:layout_constraintEnd_toEndOf="@+id/item_label_Level"
        app:layout_constraintStart_toStartOf="@+id/item_label_SSID"
        app:layout_constraintTop_toBottomOf="@+id/item_label_SSID" />

    <TextView
        android:id="@+id/item_label_Cap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_wifi_result_item_capabilities"
        app:layout_constraintEnd_toEndOf="@+id/item_label_Level"
        app:layout_constraintStart_toStartOf="@+id/item_label_BSSID"
        app:layout_constraintTop_toBottomOf="@+id/item_label_BSSID" />

    <TextView
        android:id="@+id/item_label_Frequency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/label_wifi_result_item_frequency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_label_Level"
        app:layout_constraintStart_toStartOf="@+id/item_label_BSSID"
        app:layout_constraintTop_toBottomOf="@+id/item_label_Cap" />

    <TextView
        android:id="@+id/item_label_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/label_wifi_result_item_level"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_label_BSSID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_label_SSID" />
</androidx.constraintlayout.widget.ConstraintLayout>